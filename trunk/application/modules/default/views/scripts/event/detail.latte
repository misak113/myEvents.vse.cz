<div class="background">	<div class="inside detail">												<form method="" action="">							<div  class="item">														<div class="info">					<h2>{$event->name}</h2>					<div class="basic">													<div class="part"><span class="speaker"></span><strong>Ivan Novák</strong></div>								<div class="part"><span class="start"></span><strong>12.12. (pátek)</strong> </div>								<div class="part"><span class="end"></span><strong>{date('H:i', strtotime($event->timestart))}</strong> </div>								<div class="part"><span class="start"></span><strong>{date('H:i', strtotime($event->timeend))}</strong> </div><br />								<div class="part"><span class="room"></span><strong>{$event->location}</strong> </div>																<div class="part"><span class="org"></span>								               {foreach $organizations as $organization}                                                    <strong><a href="{$view->addHttp($view->cleanUrl($organization->website))}">{$organization->name}</a></strong> {if !$iterator->isLast()}|{/if}                                                {/foreach}								</div>                                        </div>				<p>{$event->shortinfo}</p>                                     <p>{$event->longinfo}</p>							<div class="other">			<span>				Kapacita: 				</span>				<strong>					{$event->capacity}				</strong>				</div>				<div class="other">				<span>					Odkaz na FB: 					</span>				<strong>					<a href="{$view->addHttp($view->cleanUrl($event->fburl))}">{$event->fburl}</a>				</strong>			</div>			                        <div class="other">				<span>Sponzor:</span>				<strong>                                    {foreach $sponsors as $sponsor}                                        <a href="{$view->addHttp($view->cleanUrl($sponsor->url))}">{$sponsor->name}</a> {if !$iterator->isLast()}|{/if}                                    {/foreach}				</strong>			</div>														<div class="social">											<a href="{$view->addHttp($view->cleanUrl($event->fburl))}" class="fb"></a>											<a href="" class="tw"></a>											<a href="" class="gog"></a>											<a href="" class="mail"></a>										</div>									</div>					<div class="img">                                        {var $organization = $organizations->current()}					{if !$event->picture}                                            {if @$organization->logo}                                                <img src="{$view->baseUrl()}/img/logo/{$organization->logo}" alt="" />                                            {else}                                                <img src="{$view->baseUrl()}/img/action-screen.jpg" alt="" />                                            {/if}                                        {else}                                            <img src="{$view->baseUrl()}/img/picture/{$event->picture}" alt="" />                                        {/if}					</div>					</div>		</form>			</div></div><a n:href="eventList" class="btn"><span class="icon-chevron-left"></span>Zpět na seznam akce</a>